        <div class="row">
            <% @products.each do |p|%>
              <% if p.product_categories.present? %>
                <div class="col-sm-3 col-md-4 col-lg-2">
               <%= link_to "#{p.product_name}", buyCategoryList_path(p), id: 'list',class: 'btn btn-primary' %>
                </div>
              <% end %>
            <% end %>
        </div>    
</div>    
<%= render 'layouts/partials/searchbox' %>
