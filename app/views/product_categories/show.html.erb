<div class="container">
	<div class="card">
	<%= form_for :confirm , url: buy_confirm_path(@product_category) do |f| %>
    	 <h3><%= @product_category.name %></h3>
    	 <p align="center"><% @product_category.images.each do |c|%>
	            <%= image_tag(c.thumb.url) %>
	     <% end %>
	     <b>Price</b> <%= @product_category.price %></p>
	     <p><b>Description</b> <%= @product_category.description %></p>
	     <b>Quantity:-</b> 	<%= f.text_field(:quantity)%><br><br>
	     <%= f.submit "confirm", class:"btn-primary" %><br>
		 <%= link_to "Get Receipt (PDF)", ProductCategory_path(@product_category, format: "pdf")%>
   <% end %>
    </div>
</div>