<div class="container">
      <div class="card">
        <h3>Product Details</h3>
<%= link_to 'New Product', new_product_path,class: 'btn btn-success',id: 'new_product_id'%>
        <table class="table">
        <% @products.each do |p|%>
            <tr class="product-row">
                <td><%= p.product_name %></td>
                <td><%= link_to 'Edit',edit_product_path(p) %></td>
                <td><%= link_to 'View',list_categories_path(p) %></td>
                <td><%= link_to 'Delete',delete_product_path(p),method: :delete, data: {confirm: 'Are You Sure?'}%></td>
           </tr>
        <% end %>
        </table>
 </div>
</div>

