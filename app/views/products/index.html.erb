<div class="container">
      <div class="card">
<%= link_to 'New Product', new_product_path,class: 'btn btn-primary',remote: true, id: 'new_product_id'%>
        <h1>Product</h1>
        <table>
        <% @products.each do |p|%>
            <tr class="product-row">
                <td><%= p.product_name %></td>
                <td><%= link_to 'Edit',edit_product_path(p) %></td>
                <td><%= link_to 'View',list_categories_path(p) %></td>
                <td><%= link_to 'Delete',delete_product_path(p),method: :delete, data: {confirm: 'Are You Sure?'}%></td>
           </tr>
        <% end %>
        </table>
 </div>
</div>

<%= javascript_include_tag 'products/product' %>